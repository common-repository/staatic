{
    "$schema": "https://playground.wordpress.net/blueprint-schema.json",
    "landingPage": "/wp-admin/admin.php?page=staatic-settings",
    "preferredVersions": {
        "php": "8.2",
        "wp": "latest"
    },
    "phpExtensionBundles": [
        "kitchen-sink"
    ],
    "steps": [
        {
            "step": "installPlugin",
            "pluginZipFile": {
                "resource": "wordpress.org/plugins",
                "slug": "staatic"
            },
            "options": {
                "activate": true
            }
        },
        {
            "step": "writeFile",
            "path": "/wordpress/wp-content/mu-plugins/staatic-notice.php",
            "data": "<?php add_action( 'admin_notices', function() { echo '<div class=\"notice\"><p><strong>Playground</strong> Staatic is running in WordPress Playground, lacking MySQL/MariaDB support. To test publications, use Staatic on a standard WordPress setup.</p></div>'; } );"
        },
        {
            "step": "login",
            "username": "admin",
            "password": "password"
        }
    ]
}
